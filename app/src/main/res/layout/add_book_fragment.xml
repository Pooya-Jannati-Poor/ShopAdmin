<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".shop.AddBookFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_green"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:textDirection="rtl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/_12sdp">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tvPageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_12sdp"
                android:text="@string/product_add_new_book"
                android:textColor="@color/green_500"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_12sdp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_12sdp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_80sdp"
                        android:background="@color/light_white"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingTop="@dimen/_40sdp"
                        android:paddingBottom="@dimen/_12sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@drawable/bg_white_book_detail"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:paddingVertical="@dimen/_8sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/product_book_name"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                            <EditText
                                android:id="@+id/edBookName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:hint="دو برج"
                                android:inputType="text"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@drawable/bg_white_book_detail"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:paddingVertical="@dimen/_8sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/product_book_writer"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                            <EditText
                                android:id="@+id/edBookWriter"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:hint="اصغر فرهادی"
                                android:inputType="text"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@drawable/bg_white_book_detail"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:paddingVertical="@dimen/_8sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/product_publication"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                            <EditText
                                android:id="@+id/edBookPublisher"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:hint="شگفت"
                                android:inputType="text"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@drawable/bg_white_book_detail"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:paddingVertical="@dimen/_8sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/product_category"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                            <Spinner
                                android:id="@+id/spBookCategory"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_weight="1" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@drawable/bg_white_book_detail"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:paddingVertical="@dimen/_8sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/product_price"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                            <EditText
                                android:id="@+id/edBookPrice"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:hint="95000"
                                android:inputType="number"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@drawable/bg_white_book_detail"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:paddingVertical="@dimen/_8sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/product_page_count"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                            <EditText
                                android:id="@+id/edBookPageCount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:hint="300"
                                android:inputType="number"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@drawable/bg_white_book_detail"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:paddingVertical="@dimen/_8sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/product_publish_year"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                            <EditText
                                android:id="@+id/edBookPublishYear"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:hint="1397"
                                android:inputType="number"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@drawable/bg_white_book_detail"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:paddingVertical="@dimen/_8sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/product_isbn"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                            <EditText
                                android:id="@+id/edBookISBN"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:hint="987-600-997-3-22-3"
                                android:inputType="number"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@drawable/bg_white_book_detail"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:paddingVertical="@dimen/_8sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/product_available_count"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                            <EditText
                                android:id="@+id/edBookAvailableCount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:hint="7"
                                android:inputType="number"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@drawable/bg_white_book_detail"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:paddingVertical="@dimen/_8sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/product_discount"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                            <EditText
                                android:id="@+id/edBookDiscount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:hint="7"
                                android:inputType="number"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@drawable/bg_white_book_detail"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:paddingVertical="@dimen/_8sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/product_description"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                            <EditText
                                android:id="@+id/edBookDescription"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_110sdp"
                                android:layout_gravity="start"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:hint="خلاصه کتاب"
                                android:inputType="textMultiLine"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_gravity="center_horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/imgBook"
                                android:layout_width="@dimen/_115sdp"
                                android:layout_height="@dimen/_115sdp"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_admin_image_test"
                                android:transitionName="coffeeShopImage"
                                app:shapeAppearanceOverlay="@style/img_admin_curve" />

                            <ImageView
                                android:id="@+id/addImage"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_camera"
                                android:visibility="invisible"
                                android:layout_gravity="center"/>

                        </FrameLayout>



                    </LinearLayout>

                </FrameLayout>

                <Button
                    android:id="@+id/btnAddEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/bg_btn_save_profile_info"
                    android:text="@string/add_book"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp" />

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</layout>